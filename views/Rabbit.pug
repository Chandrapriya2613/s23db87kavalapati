extends layout

block content
  h1= title
  -var r = results
  
  div(class="container-fluid")
  div(class="row")
    each b,index  in results
      div(class="col-sm-2" onclick =`buy(${index})`)   Breed : #{b.breed},Color : #{b.color},price : #{b.price}
        button.btn( class="btn-primary ml-1", onclick= buy) Update
    script.
        function buy(a)
        {
            alert(`You purchased Item ${a+1}`)
        }



block content
  h1= title
  -let items = results
  div(class="container-fluid")
   div(class="row m-1")
    each item in items
     - let destination = `dispatch(\"/Rabbit/update?id=${item._id}\")`
     div(class="row-sm-2", class="m-1") Item #{item.breed}(#{item.color}) is #{item.price}
      button.btn( class="btn-primary ml-1", onclick= destination) Update

  script.
    function dispatch(path){
      window.location.href=path
    }


  
    

       